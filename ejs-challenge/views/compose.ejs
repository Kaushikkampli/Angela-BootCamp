<%- include("partials/header") %>

<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="mb-3">
    
        <label for="heading" class="form-label">Title</label>
        <input type="text" class="form-control" name = "heading" placeholder="title" required autocomplete="false"><br>
    
        <label for="content" class="form-label" >Content</label>
        <textarea name = "content" class="form-control" placeholder="compose" cols="40" rows="5" required></textarea><br>
    </div>

    <button class="btn btn-primary" type="submit">Publish</button>
</form>

